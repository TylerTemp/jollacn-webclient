{
    "compilerOptions": {
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "checkJs": false,
        "moduleResolution": "node",

        "baseUrl": "src",
        "paths": {
            "~/*": ["./*"],
        }
    },

    "include": ["./**/*.ts", "./**/*.tsx", "./**/*.js", "./**/*.jsx"],
    "exclude": ["./config/**/*.js", "./build/*", "./webpack.config.js"]
}